@{
    ViewData["Title"] = "Upload Medical File";
}

<div class="container mt-5">
    <h2>Upload Medical File</h2>

    <form asp-action="UploadMedicalFile" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="file">Choose File</label>
            <input type="file" name="file" class="form-control-file" required />
            @if (ViewData.ModelState["file"]?.Errors.Count > 0)
            {
                <span class="text-danger">@ViewData.ModelState["file"].Errors[0].ErrorMessage</span>
            }
        </div>

        <div class="form-group">
            <label for="FileType">File Type</label>
            <input type="text" name="FileType" class="form-control" placeholder="e.g. Lab Report, Scan..." required />
        </div>

        <div class="form-group">
            <label for="Description">Description</label>
            <textarea name="Description" class="form-control" rows="3" placeholder="Optional notes..."></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Upload</button>
        <a href="/Patient/MedicalRecords" class="btn btn-secondary">Cancel</a>
    </form>
</div>
