@model EHRsystem.Models.Base.User

@{
    ViewData["Title"] = "Confirm Delete";
}

<h2 class="text-danger">Are you sure you want to delete this user?</h2>

<div class="border p-3">
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Role:</strong> @Model.Role</p>

    <form asp-action="ConfirmDeleteUser" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="ManageUsers" class="btn btn-secondary">Cancel</a>
    </form>
</div>
