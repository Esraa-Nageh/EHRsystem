@model IEnumerable<EHRsystem.Models.Base.User>

@{
    ViewData["Title"] = "Manage Users";
}

<h2 class="mt-4 mb-3">Manage Users</h2>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    @if (user.Role != "Admin")
                    {
                        <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                    }
                    else
                    {
                        <span class="text-muted">Protected</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
